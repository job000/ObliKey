# Docker Environment Variables
# Copy this to .env before running docker-compose

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=oblikey

# Redis
REDIS_PASSWORD=redis_password

# Application
JWT_SECRET=your-super-secret-jwt-key-change-in-production-12345678
JWT_EXPIRES_IN=7d

# URLs
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Ports
POSTGRES_PORT=5432
REDIS_PORT=6379
APP_PORT=3000

# Optional: Stripe (leave empty if not using)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Optional: Vipps (leave empty if not using)
VIPPS_CLIENT_ID=
VIPPS_CLIENT_SECRET=
VIPPS_SUBSCRIPTION_KEY=
VIPPS_MERCHANT_SERIAL_NUMBER=
VIPPS_ENV=test

# Optional: Email (leave empty if not using)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=ObliKey <noreply@oblikey.com>
