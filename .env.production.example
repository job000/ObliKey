# ====================
# ObliKey Enterprise - Production Environment
# ====================

# Database
POSTGRES_USER=oblikey
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_DB=oblikey
POSTGRES_PORT=5432
DATABASE_URL="postgresql://oblikey:CHANGE_THIS_SECURE_PASSWORD@postgres:5432/oblikey?schema=public"

# Redis
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_PORT=6379
REDIS_URL="redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379"

# Application
NODE_ENV=production
APP_PORT=3000
FRONTEND_URL=https://yourdomain.com

# JWT
JWT_SECRET=CHANGE_THIS_TO_A_VERY_SECURE_RANDOM_STRING_MINIMUM_32_CHARACTERS
JWT_EXPIRES_IN=7d

# Stripe
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_STARTER_MONTHLY=price_xxx
STRIPE_PRICE_STARTER_YEARLY=price_xxx
STRIPE_PRICE_BASIC_MONTHLY=price_xxx
STRIPE_PRICE_BASIC_YEARLY=price_xxx
STRIPE_PRICE_PRO_MONTHLY=price_xxx
STRIPE_PRICE_PRO_YEARLY=price_xxx
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_xxx
STRIPE_PRICE_ENTERPRISE_YEARLY=price_xxx

# Vipps
VIPPS_CLIENT_ID=your-client-id
VIPPS_CLIENT_SECRET=your-client-secret
VIPPS_SUBSCRIPTION_KEY=your-subscription-key
VIPPS_ENV=production
VIPPS_CALLBACK_URL=https://yourdomain.com/api/webhooks/vipps

# Email (SMTP)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=apikey
EMAIL_PASSWORD=SG.xxx
EMAIL_FROM="ObliKey <noreply@oblikey.com>"

# Monitoring & Analytics
SENTRY_DSN=https://xxx@sentry.io/xxx
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Feature Flags (optional)
ENABLE_SIGNUP=true
ENABLE_TRIAL=true
TRIAL_DAYS=14
